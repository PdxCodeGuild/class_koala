#rotCipher
cipher = {"a":"n", "b":"o", "c":"p", "d":"q", "e":"r", "f":"s", "g":"t", "h":"u", "i":"v", "j":"w", "k":"x", "l":"y", "m":"z", "n":"a", "o":"b", "p":"c", "q":"d", "r":"e", "s":"f", "t":"g", "u":"h", "v":"i", "w":"j", "x":"k", "y":"l", "z":"m", " ":" "}

string1 = input("Enter the text you would like to be encoded. No capital letters\n")
string2 = ""

for letter in string1:
    string3 = (cipher[letter])
    string2 = string2+string3

print(f"{string2}")
